<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foodRecCardForTable"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/foodRecImageForTable"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/upload"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:id="@+id/foodRecTitleFortable"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecImageForTable"
            android:text="Tên món ăn"
            android:textColor="@color/lightblue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/foodRecPriceForTable"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="10dp"
            android:text="Giá"
            android:textAlignment="center"
            android:textColor="@color/lightblue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/foodCountForTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/minusItem"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/lightblue"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/plusItem"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/foodCountForTable"
            android:src="@drawable/plus" />

        <ImageView
            android:id="@+id/minusItem"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/foodRecImageForTable"
            android:src="@drawable/minus" />

        <ImageView
            android:id="@+id/delItem"
            android:layout_width="30dp"
            android:layout_height="26dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/plusItem"
            android:src="@drawable/baseline_delete_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>